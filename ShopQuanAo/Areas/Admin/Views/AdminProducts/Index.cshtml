@model IEnumerable<ShopQuanAo.Entities.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
                <a class="btn btn-light btn-icon-split" asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Create">

            <span class="text bg-gradient-success">Thêm mới</span>
        </a>
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <select style="width:200px" id="idCat" name="idCat" aria-controls="dataTable" class="custom-select custom-select-sm form-control form-control-sm border-left-dark animated--grow-in" asp-items="ViewBag.DanhMuc">
                <option value="0" disabled selected>Chọn danh mục</option>
            </select>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ProductName</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>UnitsInStock</th>
                    <th>Status</th>
                    <th>#</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>ProductName</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>UnitsInStock</th>
                    <th>Status</th>
                    <th>#</th>
                </tr>
            </tfoot>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.ProductName</td>
                            <td>@item.Cat.CatName</td>
                            <td>@item.Price.Value.ToString("#,##0") VNĐ</td>
                            <td>@item.UnitsInStock</td>
                            <td>
                                @if(item.UnitsInStock.Value > 0)
                                {
                                    <div>InStock</div>
                                }
                                else
                                {
                                    <div>OutStock</div>
                                }
                            </td>
                            <td>
                                <a class="btn btn-success btn-icon-split" asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.ProductId">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <span class="text">View</span>
                                </a>
                                <a class="btn btn-info btn-icon-split" asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.ProductId">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-info-circle"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </a>
                                <a class="btn btn-danger btn-icon-split" asp-asp-area="Admin" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@item.ProductId">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        </tbody>
        </table>
       
